{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Atmos combo entity",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "parts"],
  "properties": {
    "name": { "type": "string" },
    "parts": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/$defs/part" }
    },
    "overrides": { "$ref": "#/$defs/overrides" },
    "stack": { "$ref": "#/$defs/stack" }
  },
  "$defs": {
    "vec3": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "rotation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "roll": { "type": "number" },
        "pitch": { "type": "number" },
        "yaw": { "type": "number" }
      }
    },
    "transform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": { "$ref": "#/$defs/vec3" },
        "rotation": { "$ref": "#/$defs/rotation" },
        "scale": { "type": "number" }
      }
    },
    "dimensions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" },
        "depth": { "type": "number" }
      }
    },
    "shapeOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "color": { "type": "string" },
        "dimensions": { "$ref": "#/$defs/dimensions" },
        "radius": { "type": "number", "exclusiveMinimum": 0 }
      }
    },
    "physicsOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "body_type": {
          "type": "string",
          "enum": [
            "dynamic",
            "fixed",
            "kinematic_position",
            "kinematic_position_based",
            "kinematic_velocity",
            "kinematic_velocity_based"
          ]
        },
        "mass": { "type": "number" },
        "restitution": { "type": "number" },
        "friction": { "type": "number" }
      }
    },
    "lightOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["point"] },
        "color": { "type": "string" },
        "intensity": { "type": "number" },
        "range": { "type": "number" },
        "shadows": { "type": "boolean" },
        "radius": { "type": "number" },
        "offset": { "$ref": "#/$defs/vec3" }
      }
    },
    "overrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "shape": { "$ref": "#/$defs/shapeOverrides" },
        "physics": { "$ref": "#/$defs/physicsOverrides" },
        "light": { "$ref": "#/$defs/lightOverrides" }
      }
    },
    "part": {
      "type": "object",
      "additionalProperties": false,
      "required": ["template"],
      "properties": {
        "template": {
          "type": "string",
          "pattern": ".*\\.(3D|2D|light)\\.toml$"
        },
        "name_override": { "type": "string" },
        "transform": { "$ref": "#/$defs/transform" },
        "overrides": { "$ref": "#/$defs/overrides" }
      }
    },
    "stack": {
      "type": "object",
      "additionalProperties": false,
      "required": ["count", "spacing", "start_offset"],
      "properties": {
        "count": { "type": "integer", "minimum": 1 },
        "spacing": { "$ref": "#/$defs/vec3" },
        "start_offset": { "$ref": "#/$defs/vec3" }
      }
    }
  }
}
