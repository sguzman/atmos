{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Atmos world",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "entities": {
      "type": "array",
      "items": { "$ref": "#/$defs/entityPlacement" }
    },
    "camera": { "$ref": "#/$defs/camera" },
    "bounds": { "$ref": "#/$defs/bounds" },
    "lights": {
      "type": "array",
      "items": { "$ref": "#/$defs/lightEntry" }
    },
    "skybox": { "$ref": "#/$defs/skybox" },
    "sun": { "$ref": "#/$defs/sun" },
    "render": { "$ref": "#/$defs/render" }
  },
  "$defs": {
    "vec3": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" },
        "z": { "type": "number" }
      }
    },
    "vec2": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": { "type": "number" },
        "y": { "type": "number" }
      }
    },
    "rotation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "roll": { "type": "number" },
        "pitch": { "type": "number" },
        "yaw": { "type": "number" }
      }
    },
    "transform": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "position": { "$ref": "#/$defs/vec3" },
        "rotation": { "$ref": "#/$defs/rotation" },
        "scale": { "type": "number" }
      }
    },
    "dimensions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "width": { "type": "number" },
        "height": { "type": "number" },
        "depth": { "type": "number" }
      }
    },
    "shapeOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "color": { "type": "string" },
        "dimensions": { "$ref": "#/$defs/dimensions" },
        "radius": { "type": "number", "exclusiveMinimum": 0 }
      }
    },
    "physicsOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "body_type": {
          "type": "string",
          "enum": [
            "dynamic",
            "fixed",
            "kinematic_position",
            "kinematic_position_based",
            "kinematic_velocity",
            "kinematic_velocity_based"
          ]
        },
        "mass": { "type": "number" },
        "restitution": { "type": "number" },
        "friction": { "type": "number" }
      }
    },
    "lightOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["point", "directional", "ambient"] },
        "color": { "type": "string" },
        "intensity": { "type": "number" },
        "range": { "type": "number" },
        "shadows": { "type": "boolean" },
        "radius": { "type": "number" },
        "offset": { "$ref": "#/$defs/vec3" }
      }
    },
    "entityOverrides": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "shape": { "$ref": "#/$defs/shapeOverrides" },
        "physics": { "$ref": "#/$defs/physicsOverrides" },
        "light": { "$ref": "#/$defs/lightOverrides" }
      }
    },
    "entityPlacement": {
      "type": "object",
      "additionalProperties": false,
      "required": ["template"],
      "properties": {
        "template": { "type": "string" },
        "name_override": { "type": "string" },
        "transform": { "$ref": "#/$defs/transform" },
        "overrides": { "$ref": "#/$defs/entityOverrides" }
      }
    },
    "camera": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name"],
      "properties": {
        "name": { "type": "string" },
        "transform": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "position": { "$ref": "#/$defs/vec3" },
            "look_at": { "$ref": "#/$defs/vec3" },
            "up": { "$ref": "#/$defs/vec3" }
          }
        }
      }
    },
    "boundsAxis": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "min": { "type": "number" },
        "max": { "type": "number" }
      }
    },
    "bounds": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "shape": { "type": "string" },
        "x": { "$ref": "#/$defs/boundsAxis" },
        "y": { "$ref": "#/$defs/boundsAxis" },
        "z": { "$ref": "#/$defs/boundsAxis" }
      }
    },
    "lightEntry": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": { "type": "string", "enum": ["point", "directional", "ambient"] },
        "color": { "type": "string" },
        "intensity": { "type": "number" },
        "range": { "type": "number" },
        "shadows": { "type": "boolean" },
        "position": { "$ref": "#/$defs/vec3" },
        "look_at": { "$ref": "#/$defs/vec3" },
        "brightness": { "type": "number" },
        "radius": { "type": "number" }
      }
    },
    "skybox": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "color": { "type": "string" }
      }
    },
    "sun": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "time": { "type": "number" },
        "color": { "type": "string" },
        "brightness": { "type": "number" },
        "shadows": { "type": "boolean" },
        "distance": { "type": "number" },
        "size": { "type": "number" }
      }
    },
    "bloomPrefilter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "threshold": { "type": "number" },
        "threshold_softness": { "type": "number" }
      }
    },
    "bloom": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "preset": { "type": "string", "enum": ["natural", "old_school", "screen_blur"] },
        "intensity": { "type": "number" },
        "low_frequency_boost": { "type": "number" },
        "low_frequency_boost_curvature": { "type": "number" },
        "high_pass_frequency": { "type": "number" },
        "prefilter": { "$ref": "#/$defs/bloomPrefilter" },
        "composite_mode": { "type": "string", "enum": ["energy_conserving", "additive"] },
        "max_mip_dimension": { "type": "integer", "minimum": 1 },
        "scale": { "$ref": "#/$defs/vec2" }
      }
    },
    "fogFalloff": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["linear", "exponential", "exponential_squared", "atmospheric"]
        },
        "start": { "type": "number" },
        "end": { "type": "number" },
        "density": { "type": "number" },
        "extinction": { "$ref": "#/$defs/vec3" },
        "inscattering": { "$ref": "#/$defs/vec3" }
      }
    },
    "fog": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "enabled": { "type": "boolean" },
        "color": { "type": "string" },
        "alpha": { "type": "number" },
        "directional_light_color": { "type": "string" },
        "directional_light_alpha": { "type": "number" },
        "directional_light_exponent": { "type": "number" },
        "falloff": { "$ref": "#/$defs/fogFalloff" }
      }
    },
    "render": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "tonemapping": {
          "type": "string",
          "enum": [
            "none",
            "reinhard",
            "reinhard_luminance",
            "aces_fitted",
            "agx",
            "somewhat_boring_display_transform",
            "tony_mc_mapface",
            "blender_filmic"
          ]
        },
        "exposure_ev100": { "type": "number" },
        "deband_dither": { "type": "boolean" },
        "hdr": { "type": "boolean" },
        "bloom": { "$ref": "#/$defs/bloom" },
        "fog": { "$ref": "#/$defs/fog" }
      }
    }
  }
}
